# The three great virtues of a programmer (according to Larry Wall):

# Laziness
alias ll='ls -l'
alias git-show='git log --graph --full-history --all --color --date=short --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%ad %s"' 

# Impatience
alias lls='echo -e "\n     Slow Down!!     \n"'

# Hubris
alias patchme='sudo apt-get update && sudo apt-get upgrade -y'


